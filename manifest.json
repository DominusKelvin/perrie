{
  "name": "perrie",
  "version": "1.0",
  "description": "perrie: A chrome extension that simulates how a color blinded user perceives a webpage",
  "persmission": ["activeTab"],
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["content.js"]
  }],
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  }

}